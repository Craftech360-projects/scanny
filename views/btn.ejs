<body>
    

    <label for="stops">Enter the number of stops you need</label>
    <input type="number" id="stops" min="1">
    <button onclick="createButtons()">Create Stops</button>
    <div id="btncontainer"></div>

    <script>
        const socket = io();
        function createButtons() {
            const stops = parseInt(document.getElementById("stops").value);
            const btncontainer = document.getElementById("btncontainer");
            btncontainer.innerHTML = "";

            for (let i = 1; i <= stops; i++) {
                const button = document.createElement("button");
                button.textContent = "stop" + i;
                btncontainer.appendChild(button);
            }
            console.log("stops", stops);
            socket.emit("sendstops", stops);
        }
      
    </script>






